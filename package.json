{
  "name": "2020-benedikt",
  "version": "0.1.0",
  "description": "Benedikt Gregors Website",
  "repository": "https://github.com/scsskid/2020-benedikt",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "eleventy:default": "npx eleventy",
    "eleventy:watch": "npx eleventy --watch",
    "styles:prod": "postcss ./src/assets/css/*.css --output ./dist/assets/css/styles.css --no-map --env 'production'",
    "styles:dev": "postcss ./src/assets/css/*.css --output ./dist/assets/css/styles.css --map",
    "serve": "light-server -c .lightserverrc",
    "start": "npm-run-all clean styles:dev eleventy:default --parallel eleventy:watch serve --print-label",
    "start:debug": "DEBUG=* npm run start",
    "production": "npm-run-all clean styles:prod eleventy:default"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^6.6.0",
    "light-server": "^2.6.4"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.9.0",
    "cssnano": "^4.1.10",
    "modern-normalize": "^0.5.0",
    "moment": "^2.24.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.21",
    "postcss-cli": "^6.1.3",
    "postcss-import": "^12.0.1",
    "postcss-url": "^8.0.0",
    "prettier-stylelint": "^0.4.2",
    "stylelint": "^11.1.1",
    "stylelint-config-standard": "^19.0.0"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "./node_modules/prettier-stylelint/config.js"
    ],
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "mixin",
            "define-mixin",
            "media",
            "import",
            "custom-selector",
            "custom-media",
            "font-face",
            "import-sanitize"
          ]
        }
      ],
      "block-no-empty": null,
      "no-duplicate-selectors": null
    }
  }
}
