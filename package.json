{
  "name": "2020-benedikt",
  "version": "0.1.0",
  "description": "Benedikt Gregors Website",
  "repository": "https://github.com/scsskid/2020-benedikt",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "eleventy:default": "npx eleventy",
    "eleventy:watch": "npx eleventy --watch",
    "styles:prod": "postcss ./src/_assets/css/*.css --output ./dist/_assets/css/styles.css --no-map --env 'production'",
    "styles:dev": "postcss ./src/_assets/css/*.css --output ./dist/_assets/css/styles.css --map",
    "serve": "light-server -c .lightserverrc",
    "start": "BROWSERSLIST_ENV=modern npm-run-all clean styles:dev eleventy:default --parallel eleventy:watch serve --print-label",
    "start:debug": "DEBUG=* npm run start",
    "production": "npm-run-all clean styles:prod eleventy:default"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "light-server": "^2.6.4"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.9.0",
    "cssnano": "^4.1.10",
    "dark-mode-toggle": "^0.4.12",
    "eleventy-plugin-svg-contents": "^0.5.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "he": "^1.2.0",
    "ionicons": "^4.6.3",
    "javascript-stringify": "^2.0.1",
    "luxon": "^1.21.1",
    "markdown-it": "^10.0.0",
    "markdown-it-anchor": "^5.2.5",
    "markdown-it-attrs": "^3.0.1",
    "markdown-it-container": "^2.0.0",
    "markdown-it-footnote": "^3.0.2",
    "modern-normalize": "^0.5.0",
    "moment": "^2.24.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.21",
    "postcss-cli": "^6.1.3",
    "postcss-import": "^12.0.1",
    "postcss-mixins": "^6.2.3",
    "postcss-preset-env": "^6.7.0",
    "postcss-url": "^8.0.0",
    "prettier-stylelint": "^0.4.2",
    "stylelint": "^11.1.1",
    "stylelint-config-standard": "^19.0.0"
  },
  "browserslist": {
    "production": [
      "> 0.5%",
      "ie 11"
    ],
    "modern": [
      "last 1 chrome version",
      "last 1 firefox version"
    ]
  },
  "prettier": {
    "parser": "babel",
    "useTabs": false,
    "printWidth": 120,
    "singleQuote": true,
    "semi": false
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "browser": true,
      "es6": true
    },
    "rules": {},
    "extends": [
      "airbnb",
      "prettier"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "./node_modules/prettier-stylelint/config.js"
    ],
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "mixin",
            "define-mixin",
            "media",
            "import",
            "custom-selector",
            "custom-media",
            "font-face",
            "import-sanitize"
          ]
        }
      ],
      "block-no-empty": null,
      "no-duplicate-selectors": null
    }
  }
}
