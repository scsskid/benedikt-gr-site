<!doctype html>
<html lang="en" class="no-js">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{{ site.description }}">
    {# <title>{% if '/' === page.url %}Benedikt Gregor{% else %}{{ page.title | markdown | striptags | decodeHtmlEntities }} · BG{% endif %}</title> #}
    <title>{% if '/' === page.url %}{{ site.title  }} {% else %} {{ title }} · {{ site.title  }}{% endif %}</title>
    <script type="module" src="{{ "/_assets/js/" | url }}index.js"></script>
    <link rel="stylesheet" href="{{ "/_assets/css/" | url }}styles.css?ref={{ site.buildTime.getTime() }}">
 
    <script>
      document.documentElement.className = document
        .documentElement
        .className
        .replace(/\bno-js\b/g, '') + 'has-js ';
    </script>
  </head>
  <body id="top" itemscope itemtype="http://schema.org/WebPage" class="layout-{{ layout | baseName }}">
    <div class="page">
      <div class="site-content | hPad">
        <p class="site-branding">
            <a href="/">BG</a>
        </p>
        <div class="entry-body">
          
          {{ content | safe }}
        </div>
      </div>
      <footer class="site-footer | hPad">
        {% include "layouts/_color-scheme-toggle.njk" %}
        {% include "layouts/_social-links.njk" %}
        <div class="site-colophon | tiny-text">
          <p>Made with 🐝 in Berlin, Germany</p>
          <p>Built with <a href="https://11ty.io">Eleventy</a> · Deployed on <a href="https://netlify.com">Netlify</a><br>
          Last Update: {{ site.buildTimeString }}</p>
          <p><a href="/legal/">Legal Information</a></p>
        </div>
      </footer>
    </div>
  </body>
</html>