  <div class="color-scheme-toggles" role="group" title="select a color scheme">
    <p>Change Color Theme</p>
    <ol data-color-theme-toggle class="color-scheme-toggles-list | ui-list">
      <li>
        <input data-color-theme-toggle type="radio" name="scheme" id="dark" value="dark" aria-label="dark color scheme">
        <label for="dark">dark</label>
      </li>
      <li>
        <input data-color-theme-toggle type="radio" name="scheme" id="system" value="system" aria-label="system color scheme" checked="system">
        <label for="system">system</label>
      </li>
      <li>
        <input data-color-theme-toggle type="radio" name="scheme" id="light" value="light" aria-label="light color scheme">
        <label for="light">light</label>
      </li>
    </ol>
  </div>